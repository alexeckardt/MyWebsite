---
import ImageCard from '../../components/ImageCard.astro';
import SpriteBanner from '../SpriteBanner.astro';
import ThreeDeeCard from '../ThreeDeeCard.astro';
import ThreeDeeCardTextLogo from '../ThreeDeeCardTextLogo.astro';
---

<!-- Section W Buttons -->
<div class="section">
    <div class="linesection">

        
        <br>
        <br>
        <br>
        <br>
        <br>


        <!-- Published Components -->

        <h1>
            Projects
        </h1>
        <h2>
            Main projects that I've put a ton of time and effort into. Useable by you, right now.
        </h2>

        <div class="card_sec">
            <ThreeDeeCard
                    href="https://alexeckardt.itch.io/soulflamealpha"
                    body="" 
                    logoSprite="/images/projects/soulflame_logo.png"

                    backgroundSprite="/images/projects/soulflame_bkg.png"
                    characterSprite="/images/projects/soulflame_char.png"
                    />

            <ThreeDeeCard
                    href="https://alexeckardt.itch.io/pinball-pioneer"
                    body="" 
                    logoSprite="/images/projects/pinball_logo.png"
                    backgroundSprite="/images/projects/pinball_bkg.png"
                    characterSprite="/images/projects/pinball_char.png"
                    />

            <ThreeDeeCardTextLogo 
                    href="https://alexeckardt.github.io/GO-Transit-Visualizer/"
                    body="" 
                    title="GO Transit Viewer"

                    backgroundSprite="/images/projects/gotransitviewer.png"
                    characterSprite="/images/projects/empty.png"
                    />
        </div>


        <!-- Published Components -->

        <h1>
            Experiments
        </h1>
        <h2>
            Technical Side Projects that are cool to use and see, but aren't as user friendly.
        </h2>

        <div class="project_sec">
            <center>
    
                
            <!-- Pixel Tile Set -->
            <ImageCard
                href="https://github.com/alexeckardt/Pixel-Art-Tile-Set-Completer"
                title="Pixel Art Tile-Set Extrapolator"
                body="Python Command Line Tool to extrapolate a tile-set from Source Images" 
                imgsrc="/images/projects/patsc.png"
                year="2023"
            />

            <!-- Dungeon -->
            <ImageCard
                href="https://github.com/alexeckardt/RougelikeDungeon"
                title="Rougelike Dungeon C# Game"
                body="An simple, randomly generated bullet hell video game, created using C# using the MonoGame Game Framework." 
                imgsrc="/images/projects/rougelikedungeon.png"
                year="2023"
            />

            <!-- IOS App -->
            <ImageCard
                href="https://github.com/alexeckardt/iOS-Speedrun-Timer/"
                title="iOS Speedrun Timer"
                body="iOS App, writen in XCode, to act as a timer to store and compare speedruns time to one another" 
                imgsrc="/images/projects/ios_speedrun.png"
                year="2022"
            />

            <a href="https://github.com/alexeckardt/MyWebsite" target="_blank" rel="noopener noreferrer">
                <h3>
                    See the source code for this website!
                </h3>
            </a>

            </center>
        </div>
    </div>
</div>

<style>

    .section {
        background-color: var(--backgroundcol);
        color: white;
        border: 3px solid #00000000;
        /* border: 2px solid magenta; */

        overflow: hidden;
    }

    .linesection {
        margin: 2rem;
        border-left: 2px solid var(--vlinecol);
        /* border: 2px solid green; */
    }
    

    .card_sec {
        border: 2px solid green;
        display: flex;
        justify-content: center;
        gap: 20px;
    }
    
    .project_sec {
        border: 2px solid green;
        justify-content: center;
        gap: 20px;
    }


    h1 {
        color: var(--headercol);
        font-size: 1.5rem;
        padding-bottom: 1.5rem;
    }

    h2 {
        color: var(--headercol);
        font-size: 1rem;
        padding-bottom: 1.5rem;
    }


    h3 {
        color: var(--fadedtextcol);
        font-size: 1.1rem;
        /* text-shadow: 0 0 2px black, 0 0 2px black; */
    }

    h4 {
        color: var(--fadedtextcol);
    }

    /* Media query for smaller screens */
    @media (max-width: 640px) {
        .card_sec {
            gap: 5px
        }
    }

    /* Media query for smaller screens */
    @media (max-width: 400px) {
        .card_sec {
            display:grid;
        }
    }


</style>