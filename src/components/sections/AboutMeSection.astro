---
import Portrait from "../other/Portrait.astro";
import SpriteBanner from "../SpriteBanner.astro";
import AboutMeText from "./AboutMeText.astro";
---

<!-- Banner -->
<SpriteBanner
    text= "About Me"
    spriteurl="images/sprites/kingknight.png"
    textcol="#ff00ff"
    bkgcol="#ffffff"
    spritetrans="translateX(30vw) translateY(var(--bannerheight)) translateY(-354px)"
    />  

<!-- About Me Section -->
<div class="section">   
    <div class="linesection">
            <div class="halfsection">

                <div class="aboutmetextSection">
                    <AboutMeText />
                </div>

                <div class="hbuff">
                    <Portrait 
                    />
                </div>
                

            </div>
    </div>
</div>

<style>
    .section {

        background-color: var(--backgroundcol);
        buffer: 2rem;
        color: white;
        border: 3px solid #00000000;

        /* border: 2px solid green; */
    }
    .linesection {
        margin: 2rem;
        border-left: 2px solid var(--vlinecol);

        /* border: 2px solid green; */
    }
    .halfsection {

        height: 30rem;
        margin: 2rem;
        position: relative;
        display: flex;

        /* border: solid 2px green; */
    }
    .aboutmetextSection {
        width: 50%;
        height: 100%;

        justify-content: center;
        align-items: center;
        position: relative;
        display: flex;

        /* border: solid 2px green; */
    }
    .hbuff {
        width: 50%;
        height: 100%;

        justify-content: center;
        align-items: center;
        position: relative;
        display: flex;

        /* border: solid 2px green; */
    }

</style>