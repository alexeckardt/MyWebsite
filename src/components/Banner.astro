---
const { text, imgurl, col} = Astro.props;
---

<div class="container">
    <div class="imgg" style={`background-image:url(${imgurl})`}>
        <div class="colouroverlay">
            <div class="text">
                <h1>
                    <span class="title">
                        {text}
                    </span>
                </h1>
            </div>
        </div>
    </div>
</div>

<style>

    .container {
        height: 20rem;
        width: 100%;
    }

    .imgg {
		background-size: 100%;
		background-position: center;

        width: 100%;
        height: 100%;
    }

    .colouroverlay {
        background-color: rgba(0, 0, 0, 50%);

        width: 100%;
        height: 100%;
    }

    .text {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;

        height: 100%;
        width: 100%;
        
        color: white;
    }

    h1 {
        font-size: 4rem;
        font-weight: 800;
    }

    .title {
		background-image: var(--titlegradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}

</style>