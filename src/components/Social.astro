---
const { platform, username, d } = Astro.props;
import Layout from '../layouts/Layout.astro';
---

<p>
    <a href={`https://www.${platform}.com/${username}`}>
        <iconify-icon class="a" icon={d} width="30" height="30"></iconify-icon>
    </a>
</p>

<style>
    a {
      color: var(--unobtrusive);
      background-color: none;
      text-decoration: none;
      display: inline-block; 
      transition: 0.3s;
    }

    a:hover {
    color: var(--accent);
    }
  </style>