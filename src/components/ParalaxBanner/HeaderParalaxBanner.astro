---
import TextCard from "../TextCard.astro";

const { bkgimg } = Astro.props;
---


<!-- HTML -->
<div class="container">

    <div class="backgroundimg" style={`background-image:url(${bkgimg})`}>

        <div class="subcontainer">
            <div>
                <div class="text">
                    <h3>
                        Hello, my name is
                    </h3>
                    <h1>
                        alex eckardt
                    </h1>
                    <br>
                    <br>
                    <div class="myhbox">
                        <div class="half">
                        <h2>
                            I'm a Computer Science student, pixel-artist and game developer based near Toronto, Canada.
                            <br>
                            <br>
                            Scroll to Learn more.
                        </h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- STYLE -->
<style>

    .container {
        height: calc(160vh - var(--headerheight));
        width: 100%;

        /* border: yellow 2px solid; */
    }

    .subcontainer {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;

        height: 50%;

        padding: calc(var(--headerheight) / 2);

        /* border: red 2px solid; */
    }

    .backgroundimg {
        background-size: 100%;
        height: 100%;
        width: 100%;
        background-repeat: no-repeat;
        background-position-x: center;
        background-position-y: var(--headerheight);
        background-size: cover;
        background-attachment: fixed;
        margin-left: auto;
        margin-right: auto;
        image-rendering: pixelated;

        border: rgba(0, 0, 0, 0) 2px solid;
    }

    .myhbox {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .half {
        width: 70%;
    }

    .text {
        text-align: center;
        text-shadow: black 0 0 30px, black 0 0 30px;
    }

    h1 {
        font-size: 6vh;
        font-weight: 800;
        color: white;
    }
    
    h2 {
        font-size: 3vh;
        font-weight: 100;
        color: white;
        text-shadow: black 0 0 30px, black 0 0 30px;
    }
    h3 {
        font-size: 4vh;
        font-weight: 100;
        color: white;
    }
</style>