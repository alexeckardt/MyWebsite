---
const { bkgimg, header, desc } = Astro.props;
---

<!-- HTML -->
<div class="container">
    <div 
        class="backgroundimg" 
        style={`background-image:url(${bkgimg})`} >

        <div class="subcontainer">

            <h1>
                {header}
            </h1>
            <h2>
                {desc}
            </h2>

        </div>
    </div>

    <script>

        //Constant
		function updateScrolls() {

			//Loop
			let elements = document.querySelectorAll(".backgroundimg")
			for (let i = 0; elements[i]; i++) {

				let el = elements[i];
				updateBanner((el as HTMLElement));
			}
		}

		//B
		function updateBanner(el : HTMLElement) {

			//Get Top Position
			let top = el.getBoundingClientRect().top;
            let depth = 0.01
            let off = depth*top;

			//Update Bkg Position
			el.style.backgroundPositionY = `${off}rem`;

		}

        //Auto Update
        updateScrolls();

		//Repeat on Scroll Update
		window.addEventListener("scroll", () => {

			updateScrolls();

		});

    </script>


</div>

<!-- STYLE -->
<style>

    .container {
        height: 20rem;
        width: 100%;
    }

    .backgroundimg {
        background-size: 100%;
        height: 20rem;
        width: 100vw;
        position: absolute;
        left: 0;

        background-repeat: no-repeat;
        background-position-x: center;
        background-position-y: 5px;
        background-size: cover;
        background-attachment: fixed;
        
        margin-left: auto;
        margin-right: auto;
        image-rendering: pixelated;
    }

    .subcontainer {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;

        width: 80vw;
        height: 20rem;
        position: absolute;
        left: 10vw;

        /* border: 1px solid red; */
    }

    h1 {
        font-size: 4rem;
        font-weight: 800;
        text-shadow: 0px 0px 30px black;
    }

    h2 {
        padding-top: 20px;
        font-size: 2rem;
        font-weight: 400;
        text-shadow: 0px 0px 30px black;
    }
</style>