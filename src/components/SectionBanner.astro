---
const { bkgimg, header, desc } = Astro.props;
---

<!-- HTML -->
<div class="container">
    <div 
        class="backgroundimg" 
        style={`background-image:url(${bkgimg})`} >

        <div class="subcontainer">

            <h1>
                {header}
            </h1>

        </div>
    </div>
</div>

<h2>
    {desc}
</h2>

<!-- STYLE -->
<style>
    @import url("https://fonts.googleapis.com/css2?family=Inter:wght@400;800&display=swap");
    @import url('https://fonts.googleapis.com/css2?family=Funnel+Display:wght@300..800&family=Kumbh+Sans:wght@100..900&display=swap');
    @import url('https://fonts.googleapis.com/css2?family=Funnel+Display:wght@300..800&display=swap');


    :root {
        --section-height: 100px;
    }

    .container {
        height: var(--section-height);
        width: 100%;
        overflow: hidden;
    
        /* border: 1px solid red; */
    }

    .subcontainer {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;

        width: 80vw;
        height: var(--section-height);
        position: absolute;
        left: 10vw;

        /* border: 1px solid red; */
    }

    h1 {
        font-family: "Funnel Display", "Inter", "DM Sans", Arial, sans-serif;
        font-size: 4rem;
        font-weight: 600;
        /* text-shadow: 0px 0px 30px black; */

        color: var(--textcol);
        font: monospace;
        
        font-smooth: never;
        -webkit-font-smoothing : none;
        /* -webkit-text-stroke: 3px var(--backgroundcol); */
        /* text-stroke: 3px var(--backgroundcol); */

        transition: 0.3s;
    }

    h2 {
        padding: 20px;
        padding-top: 70px;

        font-size: 1.8rem;
        font-weight: 400;
        /* text-shadow: 0px 0px 30px black; */
        color: var(--fadedtextcol);
        
        transition: 0.3s;
        text-align: center;
    }

    @media (max-width: 840px) {
        h1 {
            font-size: 3rem;
        }
    }

     /* Media query for smaller screens */
     @media (max-width: 640px) {
        h1 {
            font-size: 2rem;
        }

        h2 {
            font-size: 1.5rem;
        }
    }

    @media (max-width: 400px) {
        h1 {
            font-size: 1.5rem;
        }

        h2 {
            font-size: 1rem;
        }
    }

</style>