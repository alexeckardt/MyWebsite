---
import Social from './Social.astro';
---


<header>
    <g>
      <Social website="twitter.com/pixeqla" icon="bi:twitter"/>
      <Social website="github.com/alexeckardt" icon="akar-icons:github-fill"/>
      <Social website="linkedin.com/in/alex-eckardt" icon="akar-icons:linkedin-v1-fill"/>
      <Social website="itch.io/alexeckardt" icon="cib:itch-io"/>
      <Social website="instagram.com/soulflamegame" icon="ant-design:instagram-filled"/>
    </g>
</header>

<style>
  header {
    display: inline;
    gap: 1rem;
    margin-top: 0.5rem;
    position: relative;
  }
  g {
    display: flex;
    position: relative;
    gap: 1rem;
  }
  hr {
    height:2px;
    border-width:0;
    color:var(--accent);
    background-color:var(--accent);
  }
</style>