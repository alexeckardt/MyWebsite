---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro'
import ProjectSection from '../components/sections/ProjectSection.astro';
import Header from '../components/Header.astro';
import EmptySection from '../components/sections/EmptySection.astro';
import CVSection from '../components/sections/CVSection.astro';
import AboutMeSection from '../components/sections/AboutMeSection.astro';
import SkillsSection from '../components/sections/SkillsSection.astro';
import ParalaxBanner from '../components/ParalaxBanner/ParalaxBanner.astro';
import HeaderParalaxBanner from '../components/ParalaxBanner/HeaderParalaxBanner.astro';
---
<script src="https://code.iconify.design/iconify-icon/1.0.1/iconify-icon.min.js"></script>

<Layout title="Alex Eckardt">
	<html>
		<body>
			
			<!--  -->
			<div class="main">
			
					<ProjectSection />
			
			</div>

			<Header />
			
		</body>
	</html>
</Layout>

<style>
	* {
		margin: 0;
		buffer: 0;
	}
	.main {
		margin-top: var(--headerheight);
		width: 100vw;
		border-top: 1px solid black;
	}
	/* Screen Size Change the Header Hegiht */
	@media (max-width: 640px) {
		.main {
			margin-top: var(--headerheightSmallScreen);
		}
	}
	@media (max-width: 400px) {
		.main {
			margin-top: var(--headerheightTinyScreen);
		}
	}
</style>
