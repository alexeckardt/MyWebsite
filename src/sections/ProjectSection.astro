---
import ImageCard from "../components/ImageCard.astro";
import SectionBanner from "../components/SectionBanner.astro";
import ThreeDeeCard from "../components/ThreeDeeCard.astro";
import ThreeDeeCardTextLogo from "../components/ThreeDeeCardTextLogo.astro";
---

<!-- Section W Buttons -->
<div class="section">

    <div class="linesection">

        <SectionBanner id="p3" 
            bkgimg="images/backgrounds/valley.png" 
            header="Projects"
            desc="Main projects that I've put a ton of time and effort into. Useable by you, right now."/>



            
            <div class="wrapper">

                <div class="card">
                    3D Card
                    <div class="glow"></div>
                </div>

            </div>


        <script is:inline src="/card.js"></script>

    </div>
</div>



<style>

    .section {
        background-color: var(--backgroundcol);
        color: white;
        /* border: 3px solid #00000000; */
        /* border: 2px solid magenta; */
        overflow: hidden;
        width: 100vw;

        height: 200vh;
    }

    .linesection {

        margin: 2rem;
        overflow: hidden;
        width: 100vw;
    }
    

    /*  Cards  */
    .wrapper{
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        justify-items: center;
        align-items: center;

        border: 1px red solid;
        overflow: hidden;
    }
    
    .card {
        min-width: 35vh;
        height: 55vh;
        /* box-shadow: 0px 0px 3px rgba(0, 0, 0, 0.051),
            0px 0px 7.2px rgba(0, 0, 0, 0.073), 0px 0px 13.6px rgba(0, 0, 0, 0.09),
            0px 0px 24.3px rgba(0, 0, 0, 0.107), 0px 0px 45.5px rgba(0, 0, 0, 0.129),
            0px 0px 109px rgba(0, 0, 0, 0.18); */

        border-radius: 10px;
        background-color: black;
        background-image: url("/images/projects/soulflame_char.png");
        background-size: cover;

        transform: rotateX(0);
        /* background-color: red; */

        transition-duration: 1000ms;
        transition-property: transform;
    }

    .card:hover {
        transition-duration: 0ms;
    }

    .glow {
        position: absolute;
        width: 100%;
        height: 100%;
        left: 0;
        top: 0;
        
        background-image: radial-gradient(circle at 50% -20%, #ffffff62, #000000ff);
        mix-blend-mode:luminosity;
        border-radius: 10px;
    }

</style>