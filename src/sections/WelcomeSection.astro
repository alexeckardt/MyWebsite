<style>
    @import url('https://fonts.googleapis.com/css2?family=Funnel+Display:wght@300..800&family=Kumbh+Sans:wght@100..900&display=swap');
    @import url('https://fonts.googleapis.com/css2?family=Funnel+Display:wght@300..800&display=swap');

    .section {
        /* background-color: var(--backgroundcol); */
        buffer: 2rem;
        color: rgb(230, 243, 255);
        /* border-top: 1px solid red; */

        width: 100vw;
        height: 100vh;
        text-align: center;

        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;

        position: relative;
        overflow: hidden;
    }

    .section::before {
        
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;

        /* Mix so We can see the effect under */
        background-image: url('/images/backgrounds/header_dark.png');
        background-size: cover; /* Ensures the image covers the entire div */
        background-position: center; /* Centers the image */
        background-repeat: no-repeat; /* Prevents the image from repeating */

        filter: blur(30px);
        z-index: -1; 
        /* //Send the background behind the content */
    }


    .hidden_section {
      display:none;
      background-image: url('/images/backgrounds/header_dark.png');
      /* used because the bkg image isn't bundled otherweise */
    }


    .linesection {
        margin: 2rem;
        border-left: 2px solid var(--vlinecol);
        /* border: 2px solid green; */
    }

    .title {
        position: relative;
        overflow: hidden;
        /* border: 2px solid black; */

        margin-bottom: 4vh;

        width: fit-content;
        padding: 4rem;
        
        /* border: 1px solid white; */
        /* font-family: "Inter", "DM Sans", Arial, sans-serif; */
        font-family: "Funnel Display", sans-serif;
        font-optical-sizing: auto;
        font-weight: 800;
        font-style: normal;

        /* mix-blend-mode: screen; */
        /* addition basically */
    }

    .socials {
      display: flex;
      justify-content: center; /* If you want to center the items instead */
      padding-top: 30px;
      gap: 20px;
      overflow: hidden;
      /* animation: startup-fade-social 6s ease-in-out forwards; */
    }


    h1 {
        font-size: 18vh;
        font-weight: 800;
        text-shadow: 0px 0px 30px rgb(109, 109, 109);
        mix-blend-mode: color-dodge;
        /* animation: startup-fade 6s ease-in-out forwards; */
    }

    h2 {
        font-size: 2rem;
        font-weight: 100;
        color: rgb(156, 156, 156);
        font-family: "Kuhmb Sans", Arial, sans-serif;
        /* animation: startup-fade-1 6s ease-in-out forwards; */
